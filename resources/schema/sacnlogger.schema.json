{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "sACN Logger Application Config",
  "properties": {
    "universes": {
      "description": "Universe list",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "integer",
