image <IMAGE_DIR>/<IMAGE_NAME>.<IMAGE_SUFFIX> {
   hdimage {
      partition-table-type = "mbr"
   }

   partition boot {
      in-partition-table = true
      partition-type = 0xC
      image = boot.vfat
      bootable = true
   }
}

image boot.vfat {
   vfat {
      label = "BOOT"
      extraargs = "-s 4 -S <SECTOR_SIZE>"
   }
   size = <BOOT_PART_SIZE>
   mountpoint = "/boot/firmware"
   exec-pre = "<EMBED_HOOK>"
}
